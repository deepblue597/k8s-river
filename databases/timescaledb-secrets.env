# TimescaleDB Secrets Configuration
# These values will be base64 encoded when creating Kubernetes secrets

# Main database credentials
POSTGRES_PASSWORD=password
POSTGRES_USER=postgres
POSTGRES_DB=river

# Replication credentials for distributed mode
POSTGRES_REPLICATOR_PASSWORD=replicator_password
POSTGRES_REPLICATOR_USER=replicator

# TimescaleDB specific settings
TS_TUNE_MEMORY=1GB
TS_TUNE_NUM_CPUS=2
TS_TUNE_MAX_CONNECTIONS=100
TS_TUNE_MAX_BG_WORKERS=8

# Distributed TimescaleDB settings
TIMESCALEDB_TELEMETRY=off
