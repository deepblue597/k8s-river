# Grafana Secrets Configuration
# These values will be base64 encoded when creating Kubernetes secrets

# Admin credentials
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=secretPassword!2#

# Database configuration (using built-in SQLite initially)
GF_DATABASE_TYPE=sqlite3

# Security settings
GF_SECURITY_SECRET_KEY=k8s-river-grafana-secret-key-2025-secure!
GF_SECURITY_DISABLE_GRAVATAR=true

# Server settings
GF_SERVER_PROTOCOL=http
GF_SERVER_HTTP_PORT=3000
GF_SERVER_DOMAIN=localhost

# Users settings
GF_USERS_ALLOW_SIGN_UP=false
GF_USERS_ALLOW_ORG_CREATE=false
GF_USERS_AUTO_ASSIGN_ORG=true
GF_USERS_AUTO_ASSIGN_ORG_ROLE=Viewer

# Anonymous access (disabled for security)
GF_AUTH_ANONYMOUS_ENABLED=false

# Logging
GF_LOG_LEVEL=info
