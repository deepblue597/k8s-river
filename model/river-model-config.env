# River Model Configuration
# Model Settings
MODEL_PATH=best_model.pth.tar
MODEL_NAME=unetplusplus_efficientnet-b3
OVERFLOW_THRESHOLD=80

# MinIO Configuration
# Full DNS: minio.default.svc.cluster.local (cross-namespace format)
MINIO_ADDRESS=minio
MINIO_PORT=9000
MINIO_BUCKET=river

# TimescaleDB Configuration
# Full DNS: timescaledb-service.default.svc.cluster.local (cross-namespace format)
TIMESCALE_ADDRESS=timescaledb-service
TIMESCALE_PORT=5432
TIMESCALE_TABLE=river_segmentation

# Kafka Configuration
# Full DNS: kafka-service.default.svc.cluster.local (cross-namespace format)
KAFKA_ADDRESS=kafka-service
KAFKA_PORT=9092
KAFKA_TOPIC=River
KAFKA_CONSUMER_GROUP=river-model-processors

# Backend API Configuration
BACKEND_ADDRESS=river-backend
BACKEND_PORT=8000
